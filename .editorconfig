root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[Makefile]
# Must use tabs for makefiles
indent_style = tab

[*.py]
indent_size = 4
# Default of black
max_line_length = 88

[*.{rs,toml}]
indent_style = space
indent_size = 4
