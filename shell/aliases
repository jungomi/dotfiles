# vim: set filetype=sh:

# Colour support
if ls --color > /dev/null 2>&1; then
  # GNU `ls`
  LS_COLOUR="--color=auto"
else
  # OS X `ls`
  LS_COLOUR="-G"
fi

alias ls="ls $LS_COLOUR"
alias la="ls -la $LS_COLOUR"
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"

# Enable sudo for aliases
alias sudo="sudo "

# File system
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias cdot="cd $DOTFILES"
alias rmf="rm -rf"

# Mimic macOS commands on Linux
if [[ "$OSTYPE" == "linux-gnu" ]]; then
  # Open file with its default application
  alias open="xdg-open"

  # Clipboard
  alias pbcopy="xsel --clipboard"
  alias pbpaste="xsel --clipboard --output"
fi

# Show prompt and error messages in ed
alias ed="ed -p '➜ ' -v"

# Use hub in place of git, when available
if command -v hub > /dev/null; then
  alias git=hub
fi

# Fuzzy finder
alias fga='git add  $(git -c color.status=always status --short | fzf --multi --ansi --prompt "git add> " --bind alt-a:select-all,alt-d:deselect-all | sed -re "s/.*\s(\S+)$/\1/")'
alias fgb='git checkout $(git branch -a --color | grep -v "*" | fzf --ansi --prompt "git checkout> ")'
alias fgc="fga && git commit -v"
alias fgs='git show $(git lg | fzf --ansi --multi --prompt "git show> " | sed -re "s/^\W+(\w+)\s.*/\1/")'

# One of @janmoesen’s ProTip™s
for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do
  alias "$method"="lwp-request -m '$method'"
done
